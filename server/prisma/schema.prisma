datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Device {
  createdAt DateTime @default(now())
  disk      Disk?    @relation(fields: [diskId], references: [id])
  diskId    String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Disk {
  createdAt DateTime @default(now())
  devices   Device[]
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  vendor    String?
}